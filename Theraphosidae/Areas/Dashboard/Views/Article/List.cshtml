@model List<ArticleModel>

@{
    ViewData["Title"] = "Lista artykułów";

    ViewData["Page"] = "ArticleView";
    ViewData["Group"] = "Article";

    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";


}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Wrzuc tu nazwe</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index","Dashboard")">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("List","Article")">Artykuły</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                Szczegóły
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Artykuły</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">




                        @if (Model.Count != 0)
                            @foreach (var articleModel in Model)
                            {

                                <div class="col-md-6">
                                    <div class="card" style="min-height: 500px; max-height: 500px; margin: 15px;">

                                        @if (articleModel.Image == null)
                                        {
                                            <img class="card-img-top"
                                                 src="~/images/img-plcaeholder.png"
                                                 alt="Card image cap">
                                        }
                                        else
                                        {
                                            <img class="card-img-top"
                                                 src="@articleModel.Image.Url"
                                                 alt="Card image cap">
                                        }


                                        <div class="card-body">
                                            @if (articleModel.Title != null)
                                            {
                                                <h5 class="card-title">@articleModel.Title</h5>
                                            }
                                            else
                                            {
                                                <h5 class="card-title">Brak danych</h5>
                                            }

                                            @if (articleModel.Abstract == null)
                                            {
                                                <p class="card-text">Brak danych</p>
                                            }
                                            else
                                            {
                                                <p class="card-text">@articleModel.Abstract</p>
                                            }

                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">Data dodania: @articleModel.AddDate</li>
                                        </ul>
                                        <div class="card-body">
                                            <a href="@Url.Action("Details","Article", new { Id = articleModel.Id})" class="card-link">Czytaj więcej..</a>
                                        </div>
                                    </div>
                                </div>
                            }

                    </div>
                </div>


            </div>
        </div>


    </div>
</div>

@section Scripts {
<script>


</script>

}