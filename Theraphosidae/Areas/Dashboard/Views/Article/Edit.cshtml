@section Scripts {
    <script>


        function previewFile(input) {
            var file = $("input[type=file]").get(0).files[0];

            if (file) {
                var reader = new FileReader();

                reader.onload = function () {
                    $("#img-placeholder").attr("src", reader.result);
                }

                reader.readAsDataURL(file);
            }
        }

    </script>
