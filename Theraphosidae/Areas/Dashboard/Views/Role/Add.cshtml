@model RoleView

@{
    ViewData["Title"] = "Tworzenie roli";

    ViewData["Page"] = "RoleAdd";
    ViewData["Group"] = "Role";

}


<div class="page-inner" style="margin-top:15px;">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Stwórz rolę</h4>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    @if (User.Identity.Name == "admin")
                    {
                        <div class="col-md-4">
                            <div class="login" style="background-color: white;">

                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                @using (Html.BeginForm("Add", "Role", new { area = "dashboard" }, FormMethod.Post, true, new { @class = "login-form" }))
                                {
                                    <div class="form-group">
                                        <label for="rolename" class="placeholder"><b>Nazwa roli</b></label>
                                        @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group form-action-d-flex mb-3">
                                        <button type="submit" class="btn btn-secondary col-md-5 float-left mt-3 mt-sm-0 fw-bold">Stwórz rolę</button>
                                    </div>
                                }
                            </div>
                        </div>
                    }


                    else
                    {
                        <div style="margin-top:10px;">
                            <label>Role moze stworzyc jedynie administrator</label>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

