@model RegisterView

@{
    ViewData["Title"] = "Rejestracja";

    ViewData["Page"] = "AccountAdd";
    ViewData["Group"] = "Account";

}

<div class="page-inner" style="margin-top:15px;">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Załóż konto</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="login" style="background-color: white;">

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            @using (Html.BeginForm("Register", "Account", new { area = "dashboard" }, FormMethod.Post, true, new { @class = "login-form" }))
                            {
                                <div class="form-group">
                                    <label for="username" class="placeholder"><b>Login</b></label>
                                    @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="username" class="placeholder"><b>E-mail</b></label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="password" class="placeholder"><b>Hasło</b></label>
                                    <div class="position-relative">
                                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                        <div class="show-password">
                                            <i class="icon-eye"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="placeholder"><b>Powtórz hasło</b></label>
                                    <div class="position-relative">
                                        @Html.PasswordFor(x => x.RepeatPassword, new { @class = "form-control" })
                                        <div class="show-password">
                                            <i class="icon-eye"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-action-d-flex mb-3">
                                    <button type="submit" class="btn btn-secondary col-md-5 float-left mt-3 mt-sm-0 fw-bold">Rejestruj</button>
                                </div>
                            }
                        </div>
                        <div style="margin-top:10px;">
                            <label>Masz już konto? <a href="@Url.Action("Login","Account", new { Area = "dashboard" })">Zaloguj się</a></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>