@section Scripts{ 
<script>

    const updateOutput = (input) => {
        $(input).parent().find("output").text($(input).val());
    };

    $(".btn-range-add").click(function () {
        let range = $(this).parent().find(".form-control-range");
        range.val(parseInt(range.val()) + 1);

        updateOutput(range);
    });

    $(".btn-range-subtract").click(function () {
        let range = $(this).parent().find(".form-control-range");
        range.val(parseInt(range.val()) - 1);

        updateOutput(range);
    });

    $(".form-control-range").on("input", function () {
        updateOutput(this);
    });

</script>
}