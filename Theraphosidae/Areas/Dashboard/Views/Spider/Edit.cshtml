                        <span class="input-icon-addon">
                            <i class="fas fa-pen-alt"></i>
                        </span>
                        <label>Podaj taksonomię infrarzędu (infraordo) ptasznika</label>
                        @Html.TextBoxFor(x => x.AnimalTaxonomy.Infraordo, new { @class = "form-control", @placeholder = "Podaj infrarząd ptasznika" })
                    </div>

                    <div class="input-icon mb-3">
                        <span class="input-icon-addon">
                            <i class="fas fa-pen-alt"></i>
                        </span>
                        <label>Podaj taksonomię nadrodziny (superfamilia) ptasznika</label>
                        @Html.TextBoxFor(x => x.AnimalTaxonomy.Superfamilia, new { @class = "form-control", @placeholder = "Podaj nadrodzinę ptasznika" })
                    </div>

                    <div class="input-icon mb-3">
                        <span class="input-icon-addon">
                            <i class="fas fa-pen-alt"></i>
                        </span>
                        <label>Podaj taksonomię podrodziny (subfamilia, subfam.) ptasznika</label>
                        @Html.TextBoxFor(x => x.AnimalTaxonomy.Subfamilia, new { @class = "form-control", @placeholder = "Podaj podrodzinę ptasznika" })
                    </div>

                    <div class="input-icon mb-3">
                        <span class="input-icon-addon">
